{
  "name": "nexus-api-server",
  "version": "1.0.0",
  "description": "Express.js API server for Nexus dashboard",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "migrate": "node src/database/migrate.js",
    "migrate:status": "node -e \"const MigrationRunner = require('./src/database/migrate'); new MigrationRunner().getMigrationStatus().then(console.log).catch(console.error)\""
  },
  "dependencies": {
    "axios": "^1.13.4",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "2.0.2",
    "pg": "^8.18.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "nodemon": "^3.1.11",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
