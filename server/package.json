{
  "name": "nexus-api-server",
  "version": "1.0.0",
  "description": "Express.js API server for Nexus dashboard",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "migrate": "node src/database/migrate.js",
    "migrate:status": "node -e \"const MigrationRunner = require('./src/database/migrate'); new MigrationRunner().getMigrationStatus().then(console.log).catch(console.error)\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "2.0.2",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.0",
    "nodemon": "^3.0.2",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
