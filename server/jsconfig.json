{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "checkJs": false
  },
  "include": [
    "**/*.js",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "**/*.spec.js"
  ]
}
