# Example server environment variables for local development and documentation
# Copy this file to server/.env and fill in secrets locally (DO NOT commit real secrets)

# AI Gateway Configuration
OPENAI_API_KEY=
OPENROUTER_API_KEY=
LOCAL_OPENAI_URL=http://localhost:8000
LOCAL_API_KEY=sk-local

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vector_db

# Redis (Required for production rate limiting with multiple instances)
# If not set, rate limiting will fall back to in-memory store (single instance only)
REDIS_URL=redis://localhost:6379

# Server
NODE_ENV=development
PORT=3001
API_PORT=3001
JWT_SECRET=

# Trust proxy setting (set to 'true' in production behind load balancer/reverse proxy)
TRUST_PROXY=false

# Auth provider (placeholders)
AUTHENTIK_CLIENT_ID=
AUTHENTIK_CLIENT_SECRET=

# Other service tokens (placeholders)
STRIPE_SECRET_KEY=
HUBSPOT_CLIENT_SECRET=

# Logging level: DEBUG | INFO | WARN | ERROR | FATAL
LOG_LEVEL=INFO

# Use Redis-backed rate limiter in development (default: false)
RATE_LIMIT_DEV_USE_REDIS=false

# If true (default), /health requires active runtime (OpenClaw) to be reachable
HEALTH_REQUIRE_RUNTIME=true

# OpenClaw Integration (Nexus uses OpenClaw as AI engine)
# Runtime selector (openclaw | mock)
AGENT_RUNTIME=openclaw
# Keep false in production unless intentionally testing mock runtime
ALLOW_MOCK_RUNTIME=false
OPENCLAW_API_URL=http://localhost:18790/v1
OPENCLAW_API_KEY=sk-openclaw-local
OPENCLAW_ENABLE_MODELWAY_TOOLS=true
OPENCLAW_ENABLE_NEXUS_INTEGRATION_TOOLS=true
# Model-Way instruction profile: lean | full
OPENCLAW_MODELWAY_PROFILE=lean
# Guardrails to reduce over-engineered / speculative responses
OPENCLAW_STRICT_GROUNDED_MODE=true
OPENCLAW_HIDE_INTERNAL_PROCESS=true
# Note: OpenClaw should be running and accessible at OPENCLAW_API_URL
