# .cursor-config
# Nexus â€“ React + TypeScript (Strict) Guidelines
# -------------------------------------------------------------
metadata:
  owner: marcoby
  project: nexus
  version: 1.1.1
  description: >
    Shared coding standards for all Nexus repos. Optimized for strict
    TypeScript, shadcn/ui + Tailwind, Next.js App Router, and MCP tools.

enforcement:
  preCommit:
    # Block commit if either check fails
    - cmd: npm run type-check           # tsc --noEmit
    - cmd: npm run test:ci              # jest + RTL
  prePush:
    - cmd: npm run lint
    - cmd: npm run format:check

typescript:
  compilerOptions:
    strict: true
    exactOptionalPropertyTypes: true
    noUncheckedIndexedAccess: true
    noPropertyAccessFromIndexSignature: true
    paths:
      "@domains/*": ["src/domains/*"]
      "@shared/*":  ["src/shared/*"]
  lintRules:
    "@typescript-eslint/no-non-null-assertion": "error"
    "@typescript-eslint/consistent-type-imports": ["error", { "prefer": "type-imports" }]
    "@typescript-eslint/explicit-function-return-type": "warn"

react:
  patterns:
    fileExtensions: [".tsx"]
    componentConvention: functional
  performance:
    preferMemo: true
    lazyLoadRoutes: true

styling:
  framework: tailwind
  themeTokens: true
  supportsDarkMode: true

ui:
  library: shadcn/ui
  accessibility: a11y-enforced
  docsLink: https://ui.shadcn.com/docs/usage

testing:
  framework: jest
  utils: [ "@testing-library/react", "msw" ]
  minCoverage: 0.80
  snapshotTesting: true
  setupFiles:
    - tests/setupTests.ts

docs:
  requireReadmeEveryDir: true
  readmeTemplate: docs/README.template.md
  jsdoc: true

ci:
  dockerBuild: true
  analytics: plausible
  i18n: true
  ads: optional

misc:
  nodeVersion: ">=20.0.0"
  preferConst: true
  fileNaming: camelCase
  componentNaming: PascalCase
  mcpTools: auto-discover
# -------------------------------------------------------------
# End of .cursor-config
