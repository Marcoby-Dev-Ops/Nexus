# Nexus Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER-SIDE ONLY (No VITE_ prefix - not exposed to browser)
# =============================================================================

# AI Gateway Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
LOCAL_OPENAI_URL=http://localhost:8000
LOCAL_API_KEY=your_local_key_here

# Database Configuration (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nexus
DB_HOST=localhost
DB_PORT=5433
DB_NAME=nexus
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
NODE_ENV=development
PORT=3001

# Authentik OAuth Configuration (Server-side)
AUTHENTIK_CLIENT_ID=your_authentik_client_id_here
AUTHENTIK_CLIENT_SECRET=your_authentik_client_secret_here
AUTHENTIK_BASE_URL=https://identity.yourdomain.com

# N8N Configuration (Server-side)
N8N_URL=https://automate.marcoby.net
N8N_API_KEY=your_n8n_api_key_here

# Stripe Configuration (Server-side)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# HubSpot Configuration (Server-side)
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# Microsoft Configuration (Server-side)
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MS_TEAMS_TENANT_ID=common

# Google Configuration (Server-side)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_API_KEY=your_google_api_key_here

# PayPal Configuration (Server-side)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENV=live

# Other API Keys (Server-side)
BRAVE_API_KEY=your_brave_api_key_here
NINJARMM_CLIENT_ID=your_ninjarmm_client_id_here
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# =============================================================================
# CLIENT-SIDE (VITE_ prefix - exposed to browser)
# =============================================================================

# Development vs Production URLs
# Local development
VITE_DEV_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3001
VITE_AI_CHAT_URL=http://localhost:3001/api/ai/chat

# Production URLs (uncomment for production deployment)
# VITE_DEV_APP_URL=https://nexus.yourdomain.com
# VITE_API_URL=https://api.yourdomain.com
# VITE_AI_CHAT_URL=https://api.yourdomain.com/api/ai/chat

# Public URLs and non-sensitive configuration
VITE_AUTHENTIK_BASE_URL=https://identity.yourdomain.com
VITE_N8N_URL=https://n8n.yourdomain.com
VITE_NEXT_PUBLIC_APP_URL=https://nexus.yourdomain.com

# Public API keys (safe for browser)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Feature flags and configuration
VITE_CHAT_V2=1
VITE_ENABLE_AUTH_LOGS=false
VITE_ENABLE_DEBUG_LOGS=false
VITE_DEV=true

# Public client IDs (safe for browser)
VITE_AUTHENTIK_CLIENT_ID=your_authentik_client_id_here
VITE_HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here
VITE_NINJARMM_CLIENT_ID=your_ninjarmm_client_id_here
VITE_SLACK_CLIENT_ID=your_slack_client_id_here
