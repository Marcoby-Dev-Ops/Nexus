# Copy to scripts/.secrets/landing-ftp.env and fill in real values.

# FTP or FTPS endpoint
FTP_HOST=ftp.marcoby.net
FTP_SCHEME=ftp
FTP_USE_TLS=true

# Credentials
FTP_USER=your_ftp_user
FTP_PASSWORD=replace_with_real_password

# Remote upload path for the subdomain docroot
FTP_REMOTE_DIR=/www

# Landing target domain
LANDING_DOMAIN=nexus.marcoby.com
VERIFY_URL=https://nexus.marcoby.com

# Landing links that should point to the authenticated app
VITE_APP_PORTAL_URL=https://napp.marcoby.net

# Optional explicit identity URLs for auth buttons (recommended)
VITE_IDENTITY_LOGIN_URL=https://identity.marcoby.com/if/flow/default-authentication-flow/
# VITE_IDENTITY_SIGNUP_URL=https://identity.marcoby.com/if/flow/nexus-enrollment-flow/?next=%2Flogin

# Keep marketing routes enabled for landing build
VITE_ENABLE_MARKETING_ROUTES=true
