{
  "name": "nexus-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Nexus Platform - Full Stack Business Management System",
  "scripts": {
    "dev": "pnpm --filter client dev",
    "build": "pnpm --filter client build",
    "test": "pnpm --filter client test",
    "lint": "pnpm --filter client lint",
    "install:all": "pnpm install && cd client && pnpm install && cd ../server && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "pnpm": {
    "allowed-build-scripts": [
      "@swc/core",
      "cypress",
      "esbuild",
      "msgpackr-extract",
      "msw",
      "unrs-resolver"
    ],
    "onlyBuiltDependencies": [
      "@azure/msal-browser",
      "cypress",
      "esbuild",
      "msw"
    ]
  }
}
