{
  "name": "Nexus Business Intelligence Platform",
  "description": "Comprehensive business intelligence platform for innovators and entrepreneurs",
  "repository": "https://github.com/Marcoby-Dev-Ops/Nexus",
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "vite",
  "nodeVersion": "20",
  "healthCheckPath": "/",
  "healthCheckTimeout": 30,
  "environmentVariables": {
    "NODE_ENV": "production",
    "VITE_NODE_ENV": "production",
    "VITE_POSTGRES_URL": "${POSTGRES_URL}",
    "VITE_NEXT_PUBLIC_APP_URL": "https://nexus.marcoby.com",
    "VITE_APP_URL": "https://nexus.marcoby.com",
    "VITE_API_URL": "https://napi.marcoby.com"
  },
  "deployment": {
    "type": "dockerfile",
    "dockerfile": "client/Dockerfile",
    "port": 80,
    "healthCheck": {
      "path": "/health",
      "interval": 30,
      "timeout": 3,
      "retries": 3
    }
  },
  "domains": [
    "nexus.marcoby.com"
  ],
  "ssl": {
    "enabled": true,
    "provider": "letsencrypt",
    "email": "admin@marcoby.net",
    "redirectHttpToHttps": true
  },
  "monitoring": {
    "enabled": true,
    "metrics": ["cpu", "memory", "disk", "network"]
  },
  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention": 7
  },
  "services": {
    "postgres": {
      "type": "postgresql",
      "version": "15",
      "environmentVariables": {
        "POSTGRES_DB": "vector_db",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}"
      },
      "backup": {
        "enabled": true,
        "schedule": "0 2 * * *",
        "retention": 30
      },
      "monitoring": {
        "enabled": true
      }
    },
    "api": {
      "name": "Nexus API",
      "type": "dockerfile",
      "dockerfile": "server/Dockerfile",
      "port": 3001,
      "environmentVariables": {
        "NODE_ENV": "production",
        "DATABASE_URL": "${POSTGRES_URL}",
        "DB_HOST": "${POSTGRES_HOST}",
        "DB_PORT": "${POSTGRES_PORT}",
        "DB_NAME": "${POSTGRES_DB}",
        "DB_USER": "${POSTGRES_USER}",
        "DB_PASSWORD": "${POSTGRES_PASSWORD}",
        "FRONTEND_URL": "https://nexus.marcoby.com"
      },
      "domains": [
        "napi.marcoby.com"
      ],
      "ssl": {
        "enabled": true,
        "provider": "letsencrypt",
        "email": "admin@marcoby.net"
      }
    }
  }
} 